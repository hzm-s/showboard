<div class="flex justify-center py-2">
  <%= render Kanban::ItemCounterComponent.new(wip_limit: @step.wip_limit) %>
</div>
<%= tag.div class: %w(flex h-[2rem]) do %>
  <%= tag.div class: %w(w-full) do %>
    <%= tag.h3 @step.name, class: %w(text-center font-bold leading-tight text-sm) %>

    <% if state_names.any? %>
      <%= tag.div class: %w(flex flex-row justify-around) do %>
        <% state_names.each do |st| %>
          <%= tag.h4 st, class: %w(text-sm font-bold leading-none text-sm) %>
        <% end %>
      <% end -%>
    <% end -%>

  <% end -%>
<% end -%>
