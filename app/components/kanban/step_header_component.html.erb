<div class="relative">
  <div class="absolute top-0 right-0 pt-1 pr-2">
    <%= render Ui::ContextMenuComponent.new %>
  </div>
  <div class="flex justify-center pt-2">
    <%= render Kanban::ItemCounterComponent.new(wip_limit: @step.wip_limit) %>
  </div>
  <%= tag.div class: %w(py-2) do %>
    <%= tag.div class: %w(w-full h-[2rem]) do %>
      <%= tag.h3 @step.name, class: %w(text-center font-bold leading-tight) %>

      <% if state_names.any? %>
        <%= tag.div class: %w(flex flex-row justify-around) do %>
          <% state_names.each do |st| %>
            <%= tag.h4 st, class: %w(text-sm font-bold leading-none) %>
          <% end %>
        <% end -%>
      <% end -%>

    <% end -%>
  <% end -%>
</div>
