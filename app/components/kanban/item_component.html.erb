<%= tag.div data: { sort_item: true, item_in_list: true } do %>
  <%= render Ui::Board::CardComponent.new(theme: kind == :idea ? :draft : :primary) do |c| %>
    <% c.with_header do %>
      <%= render ItemKindComponent.new(kind: kind) %>
    <% end -%>
    <% c.with_id { '123' } %>
    <% c.with_body do %>
      <%= simple_format body %>
    <% end -%>
  <% end -%>
<% end -%>
