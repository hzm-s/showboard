<%= tag.div data: { item_id: id, sort_item: true, item_in_list: true } do %>
  <%= link_to item_path(id), data: { turbo_frame: 'item_detail', action: 'slide-over#open', sliding_id: 'item_detail' }, class: %w(link block rounded-lg) do %>
    <%= render Ui::ItemCardComponent.new(kind: kind, size: :sm) do %>
      <% if due %>
        <%= tag.div class: %w(mb-1) do %>
          <%= render Item::DueComponent.new(date: due) %>
        <% end -%>
      <% end -%>
      <%= tag.div class: %w(flex justify-between) do %>
        <%= tag.div class: %w(flex items-center gap-1) do %>
          <%= render Item::KindComponent.new(kind: kind) %>
          <%= render Item::IdComponent.new(item: @item, class: %w(text-sm)) %>
        <% end -%>
        <%= tag.div class: %w(flex items-center) do %>
          <%= size && render(Item::SizeComponent.new(size: size)) %>
        <% end -%>
      <% end -%>
      <%= tag.div class: %w(mt-1) do %>
        <%= simple_format body, { class: %w(text-sm) }, wrapper_tag: :div %>
      <% end -%>
      <%= tag.div class: %w(mt-1 flex justify-end) do %>
        <%= render Ui::AvatarListComponent.new(members: contributors, size: :sm) %>
      <% end -%>
    <% end -%>
  <% end -%>
<% end -%>
