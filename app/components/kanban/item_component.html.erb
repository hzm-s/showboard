<%= tag.div data: { sort_item: true, item_in_list: true } do %>
  <%= render Ui::Board::CardComponent.new(theme: kind == :idea ? :draft : :primary) do %>
    <%= tag.div class: %w(flex items-center gap-2) do %>
      <%= render ItemKindComponent.new(kind: kind) %>
      <%= tag.span "##{item_id}", class: %w(text-gray-600 text-sm) %>
    <% end -%>
    <%= tag.div class: %w(mt-1) do %>
      <%= body %>
    <% end -%>
    <%= tag.div class: %w(mt-1 flex justify-end) do %>
      <%= tag.div class: %w(flex flex-wrap gap-1) do %>
        <% if contributors.empty? %>
          <%= render Ui::BlankAvatarComponent.new %>
        <% else -%>
          <% contributors.each do |c| %>
            <%= render Ui::AvatarComponent.new(member: c) %>
          <% end -%>
        <% end -%>
      <% end -%>
    <% end -%>
  <% end -%>
<% end -%>
