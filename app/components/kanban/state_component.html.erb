<%= tag.div class: %w(flex-shrink-0), style: "flex-basis: 18rem" do %>
  <% if has_sibling %>
    <%= tag.div class: %w(flex justify-center pb-2) do %>
      <%= tag.h3 name, class: %w(text-sm font-bold) %>
    <% end -%>
  <% end -%>
  <%= tag.turbo_frame id: "#{id}__items", src: items_path(state_id: id), data: { item_counter_target: 'list' } %>
<% end -%>
