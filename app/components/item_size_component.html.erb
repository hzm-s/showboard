<% size_classes = {
  sm: %w(px-2 text-xs),
  md: %w(px-2 text-sm),
  lg: %w(px-4 text-md),
} %>
<% if @size %>
  <%= tag.span @size, class: %w(flex items-center rounded-sm bg-stone-400 text-white font-bold) + size_classes[@element_size] %>
<% else -%>
  <%= tag.span '-', class: %w(flex items-center rounded-sm text-stone-400 font-bold) + size_classes[@element_size] %>
<% end -%>
