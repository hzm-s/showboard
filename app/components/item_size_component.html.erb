<% size_classes = {
  sm: %w(px-2 text-xs),
  md: %w(px-2 text-sm),
  lg: %w(px-4 text-md),
} %>
<% if @decorate %>
  <%= tag.span @size || '-', class: %w(inline-block align-middle rounded-sm font-bold bg-stone-400 text-white) + size_classes[@element_size] %>
<% else -%>
  <%= tag.span @size || '-' %>
<% end -%>
