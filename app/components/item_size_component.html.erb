<% size_classes = {
  sm: %w(px-2 text-xs),
  md: %w(px-2 text-sm),
  lg: %w(px-4 text-md),
} %>
<% if @decorate %>
  <%= tag.span @size&.to_s || '-', class: %w(inline-block align-top rounded-sm font-bold bg-stone-400 text-white) + size_classes[@element_size] + @extra_class %>
<% else -%>
  <%= tag.span @size&.to_s || '-', class: @extra_class %>
<% end -%>
