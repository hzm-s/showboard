<% colors = {
  idea: { border: 'border-white', bg: 'bg-amber-50' },
  feature: { border: 'border-yellow-400', bg: 'bg-white' },
  rework: { border: 'border-rose-500', bg: 'bg-white' },
  tech: { border: 'border-green-500', bg: 'bg-white' },
  other: { border: 'border-blue-400', bg: 'bg-white' },
} %>
<%= tag.div data: { sort_item: true }, class: %w(rounded-lg bg-white border border-gray-300) do %>
  <%= tag.div class: %w(px-2 py-3 rounded-lg border-l-8) + [colors[@kind][:border]] + [colors[@kind][:bg]] do %>
    <%= @body %>
  <% end -%>
<% end -%>
