<div class="<%= css_class_width %> flex-shrink-0">
  <div class="pb-2 bg-slate-300 rounded-lg">

    <div class="relative">
      <div class="absolute top-0 right-0 pr-2">
        <%= render ContextMenuComponent.new %>
      </div>
      <div class="flex justify-center pt-2">
        <%= render ItemCounterComponent.new(**@items) %>
      </div>
      <div class="flex justify-center p-2">
        <h3 class="font-bold">
          <%= @name %>
        </h3>
      </div>
    </div>

    <% if @column_count == 1 -%>
      <div class="flex flex-col gap-2 px-2">
        <%= content %>
      </div>
    <% else -%>
      <div class="flex flex-row justify-between px-2">
        <%= content %>
      </div>
    <% end -%>
  </div>
</div>
