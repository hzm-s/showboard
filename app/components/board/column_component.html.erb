<%= tag.div class: %w(flex-shrink-0), style: "flex-basis: #{width}rem" do %>
  <%= tag.div class: %w(pb-4 bg-slate-200 border border-slate-300 rounded-lg) do %>
    <%= render Board::ColumnHeaderComponent.new(name: name, items: items) %>
    <% if column_count == 1 -%>
      <%= tag.div data: { controller: 'sort', sort_group: key, sort_allow_src: allow_src }, class: %w(flex flex-col gap-2 px-2) do %>
        <%= content %>
      <% end -%>
    <% else -%>
      <%= tag.div class: %w(flex flex-row justify-between px-2) do %>
        <%= content %>
      <% end -%>
    <% end -%>
  <% end -%>
<% end -%>
