<%= tag.div class: %w(flex-shrink-0), style: "flex-basis: #{width}rem" do %>
  <%= tag.div class: %w(relative pb-4 bg-slate-200 border border-slate-300 rounded-lg) do %>
    <%= render Board::ColumnHeaderComponent.new(name: name, items: items) %>
    <%= tag.div class: %w(h-full overflow-y-auto) do %>
      <%= tag.div style: "max-height:79vh" do %>
        <%= tag.div style: "#{footer? && 'padding-bottom: 3rem;'}" do %>
          <% if column_count == 1 -%>
            <%= render Board::ItemListComponent.new(step: step) do %>
              <%= content %>
            <% end -%>
          <% else -%>
            <%= tag.div class: %w(flex flex-row justify-between px-2) do %>
              <%= content %>
            <% end -%>
          <% end -%>
        <% end -%>
      <% end -%>
    <% end -%>
    <% if footer? %>
      <%= tag.div class: %w(block absolute bottom-0 w-full pt-2 pb-4 px-2 bg-slate-200) do %>
        <%= footer %>
      <% end -%>
    <% end -%>
  <% end -%>
<% end -%>
