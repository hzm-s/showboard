<%= tag.div class: %w(flex-shrink-0), style: "flex-basis: 18rem" do %>
  <%= tag.div class: %w(pb-2 rounded-lg bg-zinc-200 border border-zinc-300) do %>
    <%= tag.div class: %w(flex justify-center p-2) do %>
      <%= tag.h3 @name, class: %w(text-sm font-semibold text-stone-600) %>
    <% end -%>
    <%= tag.div data: { controller: 'sort', sort_group: key, sort_allow_src: allow_src }, class: %w(flex flex-col gap-2 px-2) do %>
      <%= content %>
    <% end -%>
  <% end -%>
<% end -%>
