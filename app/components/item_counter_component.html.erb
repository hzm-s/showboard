<% if @limit -%>
  <span class="inline-flex justify-center items-center h-7 rounded-full bg-slate-200 text-stone-600 text-sm font-bold px-3">
    <%= @count %> / <%= @limit %>
  </span>
<% else -%>
  <span class="inline-flex justify-center items-center h-7 rounded-full bg-slate-200 text-stone-600 text-sm font-bold w-7">
    <%= @count %>
  </span>
<% end -%>
