<%= render Ui::DropdownComponent.new(position: :right) do |c| -%>
  <% c.with_trigger do -%>
    <%= render Ui::IconButtonComponent.new(size: 1.75, dropdown: true, class: %w(hover:bg-gray-200)) do %>
      <%= render Ui::IconComponent.new(name: 'ellipsis', size: 1.5, class: %w(text-gray-600)) %>
    <% end -%>
  <% end -%>
  <%= c.with_dropping do -%>
    <%= tag.div class: %w(flex flex-col divider-y p-2) do -%>
      <%= menu %>
    <% end -%>
  <% end -%>
<% end -%>
