<%= tag.div class: %w(flex-shrink-0 relative), style: "flex-basis: #{single_column_size}rem" do %>

  <%= tag.div class: %w(h-full overflow-y-auto) do %>
    <%= tag.div style: "max-height:79vh" do %>
      <%= tag.div style: footer? ? 'padding-bottom:4rem' : '' do %>
        <%= body %>
      <% end -%>
    <% end -%>
  <% end -%>

  <% if footer? %>
    <%= tag.div class: %W(block absolute bottom-0 w-full bg-white rounded-b-lg pt-2) do %>
      <%= footer %>
    <% end -%>
  <% end -%>

<% end -%>
