<%= tag.div class: %w(flex-shrink-0), style: "flex-basis: #{width}rem", data: @extra_data do %>
  <%= tag.div class: %W(pb-2 bg-white border border-gray-200 rounded-lg drop-shadow-md) do %>
    <%= header %>
    <%= tag.div class: %w(px-2) do %>
      <%= tag.div class: @size > 1 ? %w(flex flex-row justify-between) : [] do %>
        <%= body %>
      <% end -%>
    <% end -%>
  <% end -%>
<% end -%>
