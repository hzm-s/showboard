<% base_class = %w(button font-bold) %>
<% color_classes = {
  primary: %w(bg-violet-500 hover:bg-violet-600 text-white),
  secondary: %w(bg-gray-200 text-gray-800 hover:bg-violet-500 hover:text-white),
} %>
<% size_classes = {
  md: %w(py-2 px-6 text-sm),
  sm: %w(py-2 px-4 text-xs),
} %>
<% css_class = base_class + color_classes[@kind] + size_classes[@size] %>

<% if @form_builder %>
  <%= @form_builder.button type: @type, class: css_class do %>
    <% content %>
  <% end -%>
<% else -%>
  <%= button_tag type: @type, class: css_class do %>
    <% content %>
  <% end -%>
<% end -%>
