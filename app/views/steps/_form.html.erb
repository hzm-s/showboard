<%= tag.div class: %w(flex flex-col gap-1) do %>
  <%= f.label :name, for: dom_id(f.object, :name), class: %w(text-sm text-slate-500 font-bold) %>
  <%= f.text_field :name, id: dom_id(f.object, :name), class: %w(form-input text-sm) %>
<% end -%>
<%= tag.div class: %w(flex flex-col gap-1) do %>
  <%= f.label :description, for: dom_id(f.object, :description), class: %w(text-sm text-slate-500 font-bold) %>
  <%= f.text_area :description, id: dom_id(f.object, :description), class: %w(form-textarea text-sm) %>
<% end -%>
<%= tag.div class: %w(flex flex-col gap-1) do %>
  <%= f.label :wip_limit, for: dom_id(f.object, :wip_limit), class: %w(text-sm text-slate-500 font-bold) %>
  <%= f.number_field :wip_limit, min: 1, max: 99, id: dom_id(f.object, :wip_limit), class: %w(form-input text-sm) %>
<% end -%>
<%= tag.field_set class: %w(flex flex-col gap-1) do %>
  <%= tag.legend :Buffers, class: %w(text-sm text-slate-500 font-bold) %>
  <%= tag.div class: %w(flex flex-col gap-1) do %>
    <%= f.collection_check_boxes :buffers, StepStateKind.buffers, :buffer_position, :buffer_position do |buf| %>
      <%= buf.label(class: %w(text-sm)) { buf.check_box(class: %w(form-checkbox mr-2)) + buf.text.to_s } %>
    <% end -%>
  <% end -%>
<% end -%>
<%= tag.field_set class: %w(flex flex-col gap-1) do %>
  <%= tag.legend 'Allow idea', class: %w(text-sm text-slate-500 font-bold) %>
  <%= tag.div class: %w(flex flex-col gap-1) do %>
    <%= f.collection_radio_buttons :allow_idea, BooleanValue.all, :value, :label do |ai| %>
      <%= ai.label(class: %w(text-sm)) { ai.radio_button(class: %w(form-radio mr-2)) + ai.label } %>
    <% end -%>
  <% end -%>
<% end -%>
<%= tag.field_set class: %w(flex flex-col gap-1) do %>
  <%= tag.legend 'Can add item?', class: %w(text-sm text-slate-500 font-bold) %>
  <%= tag.div class: %w(flex flex-col gap-1) do %>
    <%= f.collection_radio_buttons :can_add, BooleanValue.all, :value, :label do |ca| %>
      <%= ca.label(class: %w(text-sm)) { ca.radio_button(class: %w(form-radio mr-2)) + ca.text } %>
    <% end -%>
  <% end -%>
<% end -%>
