<%= tag.div class: %w(mt-10 container) do %>
  <%= tag.div class: %w(mx-auto w-[19rem]) do %>
    <%= render Ui::BoardColumnComponent.new(class: %w(p-3 w-[20rem])) do %>
      <%= tag.turbo_frame id: 'step_form' do %>
        <%= tag.h3 'Edit step', class: %w(font-bold mb-4) %>
        <%= form_with model: @step, url: '/', html: { autocomplete: 'off' } do |f| %>
          <%= tag.div class: %w(flex flex-col gap-3) do %>
            <%= render partial: 'form', locals: { f: f } %>
            <%= tag.div class: %w() do %>
              <%= render Ui::ButtonComponent.new(size: :sm).with_content('Add') %>
            <% end -%>
          <% end -%>
        <% end -%>
      <% end -%>
    <% end -%>
  <% end -%>
<% end -%>
