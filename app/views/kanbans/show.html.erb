<div class="mt-10 px-8">
  <%= tag.div data: { controller: 'slide-over' } do %>
    <%= tag.div class: %w(overflow-x-auto), data: { slide_over_target: 'base' } do %>
      <%= tag.div style: "height:92vh;" do %>
        <div class="flex flex-row gap-2">
          <% @work_flow.steps.each do |step| %>
            <%= render Kanban::StepComponent.new(step: step, work_flow: @work_flow) %>
          <% end -%>
        </div>
      <% end -%>
    <% end -%>
    <%= tag.div class: %w(slide-over), aria: { expanded: false }, data: { slide_over_target: 'sliding' } do %>
      <%= tag.div class: %w(slide-over__panel bg-white border-l border-gray-300 py-2 px-4) do %>
        <%= tag.div class: %w(flex items-center justify-between) do %>
          <%= tag.h3 'Item Detail', class: %w(text-gray-500 font-bold) %>
          <%= render Ui::IconButtonComponent.new(data: { action: 'slide-over#close' }) do %>
            <%= render Ui::IconComponent.new(name: 'close') %>
          <% end -%>
        <% end -%>
        <%= tag.turbo_frame id: 'item_detail' %>
      <% end -%>
    <% end -%>
  <% end -%>
</div>
