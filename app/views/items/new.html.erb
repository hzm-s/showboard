<%= tag.turbo_frame id: 'new_item' do %>
  <%= form_with scope: :item, url: '/' do |f| -%>
    <%= tag.div class: %w(flex flex-col gap-2) do %>
      <%= tag.div class: %w(flex flex-col gap-1) do %>
        <%= f.label :kind, class: %w(text-sm text-slate-500 font-bold) %>
        <%= f.collection_select :kind, ItemKind.all, :name, :name, {}, { class: %w(form-select w-full text-sm) } %>
      <% end -%>
      <%= tag.div class: %w(flex flex-col gap-1) do %>
        <%= f.label :content, class: %w(text-sm text-slate-500 font-bold) %>
        <%= f.text_area :content, rows: 3, class: %w(form-textarea text-sm w-full) %>
      <% end -%>
    <% end -%>
    <%= tag.div class: %w(mt-3) do %>
      <%= render Ui::ButtonComponent.new(class: %w(w-full)).with_content('Add') %>
    <% end -%>
  <% end -%>
<% end -%>
