<%= tag.div class: %w(mt-10 container) do %>
  <%= tag.div class: %w(mx-auto w-[45rem]) do %>
    <%= tag.h3 'Item', class: %w(font-bold) %>
    <%= tag.turbo_frame id: 'item_detail' do %>
      <%= tag.div class: %w(flex flex-col gap-4) do %>
        <%= render Item::DetailComponent.new(item: @item, mode: :show) %>
        <%= tag.div class: %w(rounded-lg border border-gray-200 divide-y) do %>
          <%= tag.div data: { controller: 'reveal' } do %>
            <%= tag.button type: :button, data: { action: 'click->reveal#toggle' }, class: %w(w-full cursor-pointer py-2 px-3 flex justify-between hover:bg-violet-50) do %>
              <%= tag.p do %>
                <%= render Ui::ToggleIconComponent.new(size: 0.75) %>
                <%= tag.span 'Depature from ', class: %w(text-sm) %>
                <%= tag.span 'Development (WIP)', class: %w(text-sm font-bold) %>
              <% end -%>
              <%= render Ui::PillComponent.new(wide: true) do %>
                <%= tag.span '5 / 5', class: %w(text-xs) %>
              <% end -%>
            <% end -%>
            <%= tag.div data: { reveal_target: 'item' }, class: %w(hidden border-t border-gray-200) do %>
              <%= tag.turbo_frame id: 'item_departure_check', src: item_departure_check_path(@item.id) %>
            <% end -%>
          <% end -%>
          <%= tag.div data: { controller: 'reveal' } do %>
            <%= tag.button type: :button, data: { action: 'click->reveal#toggle' }, class: %w(w-full cursor-pointer py-2 px-3 flex justify-between hover:bg-violet-50) do %>
              <%= tag.p do %>
                <%= render Ui::ToggleIconComponent.new(size: 0.75) %>
                <%= tag.span 'Arrival to', class: %w(text-sm) %>
                <%= tag.span 'Development (Done)', class: %w(text-sm font-bold) %>
              <% end -%>
              <%= render Ui::PillComponent.new(wide: true) do %>
                <%= tag.span '1 / 1', class: %w(text-xs) %>
              <% end -%>
            <% end -%>
            <%= tag.div data: { reveal_target: 'item' }, class: %w(hidden border-t border-gray-200) do %>
              <%= tag.turbo_frame id: 'item_arrival_check', src: item_arrival_check_path(@item.id) %>
            <% end -%>
          <% end -%>
          <%= tag.div class: %w(py-2 px-3 flex items-center justify-between) do %>
            <%= render Ui::ButtonComponent.new(size: :sm).with_content('Forward Item') %>
            <%= link_to 'Backward', '#', class: %w(text-link text-sm) %>
          <% end -%>
        <% end -%>
      <% end -%>
    <% end -%>
  <% end -%>
<% end -%>
