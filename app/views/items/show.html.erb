<%= tag.turbo_frame id: 'item_detail' do %>
  <%= render Ui::ItemCardComponent.new(kind: @item.kind, size: :lg, class: %w(drop-shadow)) do %>
    <%= tag.div class: %w(flex items-start justify-between) do %>
      <%= tag.div class: %w(flex items-center gap-2) do %>
        <%= render ItemKindComponent.new(kind: @item.kind, size: :md) %>
        <%= render ItemIdComponent.new(id: @item.id, class: %w(text-md)) %>
      <% end -%>
      <%= tag.div class: %w(flex flex-col gap-3 w-[10rem]) do %>
        <%= tag.div do %>
          <%= tag.div class: %w(flex justify-between) do %>
            <%= tag.span 'Due', class: %w(text-stone-500 text-xs font-bold) %>
            <%= link_to 'Edit', '#', class: %w(leading-tight text-stone-500 text-sm hover:underline) %>
          <% end -%>
          <% if @item.due %>
            <%= tag.span l(@item.due), class: %w(text-md) %>
          <% else -%>
            No due
          <% end -%>
        <% end -%>
        <%= tag.div do %>
          <%= tag.div class: %w(flex justify-between) do %>
            <%= tag.span 'Estimate', class: %w(text-stone-500 text-xs font-bold) %>
            <%= link_to 'Edit', '#', class: %w(leading-tight text-stone-500 text-sm hover:underline) %>
          <% end -%>
          <%= render ItemSizeComponent.new(size: @item.size, element_size: :lg) %>
        <% end -%>
      <% end -%>
    <% end -%>
    <%= tag.div class: %w(my-4) do %>
      <%= tag.div class: %w(flex justify-between) do %>
        <%= tag.span 'Kind', class: %w(text-stone-500 text-xs font-bold) %>
        <%= link_to 'Edit', '#', class: %w(leading-tight text-stone-500 text-sm hover:underline) %>
      <% end -%>
      <%= @item.kind %>
    <% end -%>
    <%= tag.div class: %w(my-4) do %>
      <%= tag.div class: %w(flex justify-between) do %>
        <%= tag.span 'Content', class: %w(text-stone-500 text-xs font-bold) %>
        <%= link_to 'Edit', '#', class: %w(leading-tight text-stone-500 text-sm hover:underline) %>
      <% end -%>
      <%= simple_format @item.body, class: %w(text-md) %>
    <% end -%>
    <%= tag.div class: %w(my-4) do %>
      <%= tag.div class: %w(flex justify-between) do %>
        <%= tag.span 'Note', class: %w(text-stone-500 text-xs font-bold) %>
        <%= link_to 'Edit', '#', class: %w(leading-tight text-stone-500 text-sm hover:underline) %>
      <% end -%>
      <%= simple_format 'Note about this item', class: %w(text-md) %>
    <% end -%>
    <%= tag.div class: %w(mt-4) do %>
      <%= tag.div class: %w(flex items-start justify-between) do %>
        <%= tag.span 'Current woker(s)', class: %w(text-stone-500 text-xs font-bold) %>
        <%= link_to 'Join', '#', class: %w(leading-tight text-stone-500 text-sm hover:underline) %>
      <% end -%>
      <%= tag.div class: %w(flex flex-wrap gap-1) do %>
        <%= render Ui::AvatarListComponent.new(members: @item.contributors, size: :md) %>
      <% end -%>
    <% end -%>
  <% end -%>
  <%= tag.div class: %w(text-right mt-1) do %>
    <%= link_to 'Log', '#', class: %w(text-stone-500 hover:underline) %>
  <% end -%>
<% end -%>
