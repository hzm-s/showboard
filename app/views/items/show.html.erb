<%= tag.turbo_frame id: 'item_detail' do %>
  <%= render Ui::ItemCardComponent.new(kind: @item.kind, size: :lg, class: %w(drop-shadow)) do %>

    <%= tag.div class: %w(flex flex-row gap-4) do %>

      <%= tag.div class: %w(flex-auto) do %>
        <%= tag.div class: %w(mb-2) do %>
          <%= tag.div class: %w(flex items-center gap-2) do %>
            <%= render ItemKindComponent.new(kind: @item.kind, size: :md) %>
            <%= render ItemIdComponent.new(id: @item.id, class: %w(text-md)) %>
          <% end -%>
        <% end -%>
        <%= tag.div class: %w(flex flex-col gap-4) do %>
          <%= tag.div class: %w() do %>
            <%= tag.div class: %w(flex justify-between) do %>
              <%= tag.span 'Content', class: %w(text-slate-400 text-xs font-bold) %>
              <%= link_to 'Edit', '#', class: %w(leading-tight text-stone-500 text-sm hover:underline) %>
            <% end -%>
            <%= simple_format @item.body, class: %w(text-md) %>
          <% end -%>
          <%= tag.div class: %w() do %>
            <%= tag.div class: %w(flex justify-between) do %>
              <%= tag.span 'Note', class: %w(text-slate-400 text-xs font-bold) %>
              <%= link_to 'Edit', '#', class: %w(leading-tight text-stone-500 text-sm hover:underline) %>
            <% end -%>
            <%= simple_format "Note about this item\n\nAcceptance criteria, background, context etc", class: %w(text-md) %>
          <% end -%>
          <%= tag.div class: %w() do %>
            <%= tag.div class: %w(flex justify-between mb-1) do %>
              <%= tag.span 'Current woker(s)', class: %w(text-slate-400 text-xs font-bold) %>
              <%= link_to 'Join', '#', class: %w(leading-tight text-stone-500 text-sm hover:underline) %>
            <% end -%>
            <%= tag.div class: %w(flex flex-wrap gap-1) do %>
              <%= render Ui::AvatarListComponent.new(members: @item.contributors, size: :md) %>
            <% end -%>
          <% end -%>
        <% end -%>
      <% end -%>

      <%= tag.div class: %w(flex-none w-[8rem] border-l border-gray-200 pl-4) do %>
        <%= tag.div class: %w(flex flex-col gap-2) do %>
          <%= tag.div class: %w() do %>
            <%= tag.div class: %w(flex justify-between) do %>
              <%= tag.span 'Kind', class: %w(text-slate-400 text-xs font-bold) %>
              <%= link_to 'Edit', '#', class: %w(leading-tight text-stone-500 text-sm hover:underline) %>
            <% end -%>
            <%= tag.span @item.kind, class: %w(text-sm) %>
          <% end -%>
          <%= tag.div class: %w() do %>
            <%= tag.div class: %w(flex justify-between) do %>
              <%= tag.span 'Due', class: %w(text-slate-400 text-xs font-bold) %>
              <%= link_to 'Edit', '#', class: %w(leading-tight text-stone-500 text-sm hover:underline) %>
            <% end -%>
            <%= tag.span @item.due ? l(@item.due) : 'No due', class: %w(text-sm) %>
          <% end -%>
          <%= tag.div class: %w() do %>
            <%= tag.div class: %w(flex justify-between) do %>
              <%= tag.span 'Estimate', class: %w(text-slate-400 text-xs font-bold) %>
              <%= link_to 'Edit', '#', class: %w(leading-tight text-stone-500 text-sm hover:underline) %>
            <% end -%>
            <%= render ItemSizeComponent.new(size: @item.size, decorate: false, class: %w(text-sm)) %>
          <% end -%>
        <% end -%>
      <% end -%>

    <% end -%>
  <% end -%>

  <%= tag.div class: %w(text-right mt-1) do %>
    <%= link_to 'Log', '#', class: %w(text-stone-500 hover:underline) %>
  <% end -%>
<% end -%>
