<div class="mt-10 px-8">
  <%= render Kanban::FrameComponent.new(data: { slide_over_target: 'base' }) do %>
    <%= tag.div class: %w(flex flex-row gap-2) do %>
      <% @work_flow.steps.each do |step| %>
        <%= tag.div class: %w(flex-shrink-0 basis-[19rem]) do %>
          <%= tag.turbo_frame id: step.id, src: edit_step_path(step.id) do %>
            <%= render Ui::LoadingComponent.new %>
          <% end -%>
        <% end -%>
      <% end -%>
      <%= render Kanban::NewStepComponent.new %>
    <% end -%>
  <% end -%>
</div>
